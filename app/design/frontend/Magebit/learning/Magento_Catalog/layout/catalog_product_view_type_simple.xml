<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/source/product/_extend.less" rel="stylesheet" type="text/css" />
    </head>
    <body>
<!--        <attribute name="class" value="custom page-product-simple"/>-->
        <referenceBlock name="product.info.overview" remove="true" />
        <move element="product.attributes" destination="product.info.main" after="product.info.price"/>
        <referenceBlock name="product.info.type" remove="true"/>
        <referenceBlock name="product.info.addto" remove="true"/>
        <move element="product.info.upsell" destination="product.info.main" after="addtocart"/>
        <referenceBlock name="product.info.details" remove="true"/>
        <move element="catalog.product.related" destination="content"/>
    </body>
</page>
